<Window x:Class="RecordMicroPhone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecordMicroPhone"
        mc:Ignorable="d"
        Title="MainWindow" Height="100" Width="100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0"> 
            <Button Name="RecordButton" Grid.Row="0" PreviewMouseLeftButtonDown="RecordButton_PreviewMouseLeftButtonDown" PreviewMouseLeftButtonUp="RecordButton_PreviewMouseLeftButtonUp">Record</Button>
            <Label Name="RecordLabel"></Label>
        </StackPanel>
        <Button x:Name="SendButton" Grid.Row="1" Click="SendButton_Click"> Send</Button>
       

    </Grid>
</Window>
